#cloud-config
autoinstall:
  version: 1
  
  # Locale and keyboard
  locale: en_US.UTF-8
  keyboard:
    layout: us
  
  # Network configuration
  network:
    version: 2
    ethernets:
      eth0:
        dhcp4: true
  
  # Storage configuration
  storage:
    layout:
      name: lvm
      match:
        size: largest
    swap:
      size: 0
  
  # Identity
  identity:
    hostname: {{ autoinstall_hostname }}
    username: {{ autoinstall_user }}
    password: "{{ password_hash.stdout }}"
  
  # SSH configuration
  ssh:
    install-server: yes
    allow-pw: yes
  
  # Package selection
  packages:
    - vim
    - curl
    - wget
    - net-tools
    - openssh-server
  
  # User data
  user-data:
    disable_root: false
    timezone: UTC
  
  # Late commands (run after installation)
  late-commands:
    - echo '{{ autoinstall_user }} ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/{{ autoinstall_user }}
    - chmod 440 /target/etc/sudoers.d/{{ autoinstall_user }}
    - curtin in-target --target=/target -- systemctl enable ssh
  
  # Reboot after installation
  shutdown: reboot
