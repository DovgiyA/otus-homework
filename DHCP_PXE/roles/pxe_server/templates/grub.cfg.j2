# GRUB Configuration for Network Boot
# Managed by Ansible

set timeout=10
set default=0

menuentry 'Ubuntu 24.04 Autoinstall' {
    echo 'Loading Linux kernel...'
    linux /linux url=http://{{ pxe_server_ip }}/ubuntu/casper/vmlinuz autoinstall ds=nocloud-net\;s=http://{{ pxe_server_ip }}/autoinstall/ ip=dhcp
    echo 'Loading initial ramdisk...'
    initrd /initrd.gz
    boot
}

menuentry 'Ubuntu 24.04 Manual Install' {
    echo 'Loading Linux kernel...'
    linux /linux url=http://{{ pxe_server_ip }}/ubuntu/casper/vmlinuz ip=dhcp
    echo 'Loading initial ramdisk...'
    initrd /initrd.gz
    boot
}
